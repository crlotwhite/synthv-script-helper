{
	"name": "synthv-script-helper",
	"displayName": "SynthV Script Helper",
	"description": "An extension to help you develop SynthV scripts",
	"version": "0.0.1",
	"preview": true,
	"publisher": "crlotwhite",
	"repository": {
		"type": "git",
		"url": "https://github.com/crlotwhite/synthv-script-helper.git"
	},
	"keywords": [
		"SynthV",
		"Synthesizer V"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:synthv-script-helper.openReference"
	],
	"main": "./out/extension.js",
	"contributes": {
		"snippets": [
			{
				"language": "javascript",
				"path": "./snippets/javascript.json"
			},
			{
				"language": "lua",
				"path": "./snippets/lua.json"
			},
			{
				"language": "javascript",
				"path": "./snippets/common.json"
			},
			{
				"language": "lua",
				"path": "./snippets/common.json"
			}
		],
		"commands": [
			{
				"command": "synthv-script-helper.openReference",
				"title": "Open SynthV Reference"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4",
		"@vscode/test-electron": "^2.0.3"
	}
}
